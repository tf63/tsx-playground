{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es2024",
		"lib": ["dom", "dom.iterable", "ES2024"],
		"strict": true,
		"skipLibCheck": true,

		"module": "esnext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"outDir": "dist",
		"noEmit": false,
		"incremental": false,

		"jsx": "react-jsx",
		"paths": { "@/*": ["./src/*"] }
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "out", "dist", "build", "bower_components", "jspm_packages"]
}
